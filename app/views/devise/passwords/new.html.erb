<div class="span3"></div>
<div class="span6">

  <div class="well">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
  
  <%= devise_error_messages! %>

  <div class="control-groups"><%= f.label :email,:class=>"control-label" %>
  <div class="controls"><%= f.email_field :email, autofocus: true %></div></div>

  <div class="form-actions"><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<div class="span3"></div>